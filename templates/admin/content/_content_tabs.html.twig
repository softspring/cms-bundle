{% set content_entity = content_entity|default(entity) %}
{% trans_default_domain 'sfs_cms_contents' %}

<ul class="nav nav-tabs mt-3" id="myTab" role="tablist">
    {% block tabs %}
        <li class="nav-item">
            <a class="nav-link {{ current == 'read' ? 'active' : '' }}" href="{{ url('sfs_cms_admin_content_'~content_type~'_details', {'content':content_entity}) }}">{{ ('admin_'~content_type~'.tabs_menu.details')|trans }}</a>
        </li>
        <li class="nav-item">
            {% if not content_config.admin.version_create.is_granted or is_granted(content_config.admin.version_create.is_granted, entity) %}
