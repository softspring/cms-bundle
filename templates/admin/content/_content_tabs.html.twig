            {% else %}
                <a class="nav-link disabled">{{ ('admin_'~content_type~'.tabs_menu.content')|trans }}</a>
            {% endif %}
        </li>
        <li class="nav-item">
            {% if not content_config.admin.preview.is_granted or is_granted(content_config.admin.preview.is_granted, entity) %}
                <a class="nav-link {{ current == 'preview' ? 'active' : '' }}" href="{{ url('sfs_cms_admin_content_'~content_type~'_preview', {'content':content_entity}) }}">{{ ('admin_'~content_type~'.tabs_menu.preview')|trans }}</a>
