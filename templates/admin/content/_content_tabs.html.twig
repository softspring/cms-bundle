                <a class="nav-link disabled">{{ ('admin_'~content_type~'.tabs_menu.preview')|trans }}</a>
            {% endif %}
        </li>
        <li class="nav-item">
            {% if not content_config.admin.seo.is_granted or is_granted(content_config.admin.seo.is_granted, content_entity) %}
                <a class="nav-link {{ current == 'seo' ? 'active' : '' }}" href="{{ url('sfs_cms_admin_content_'~content_type~'_seo', {'content':content_entity}) }}">{{ ('admin_'~content_type~'.tabs_menu.seo')|trans }}</a>
            {% else %}
                <a class="nav-link disabled">{{ ('admin_'~content_type~'.tabs_menu.seo')|trans }}</a>
            {% endif %}
        </li>
        <li class="nav-item">
            <a class="nav-link disabled" href="#" tabindex="-1" aria-disabled="true">{{ ('admin_'~content_type~'.tabs_menu.routes')|trans }}</a>
        </li>
        <li class="nav-item">
            {% if not content_config.admin.version_translations.is_granted or is_granted(content_config.admin.version_translations.is_granted, content_entity) %}
                <a class="nav-link {{ current == 'version_translations' ? 'active' : '' }}" href="{{ url('sfs_cms_admin_content_'~content_type~'_translations', {'content':content_entity}) }}">{{ ('admin_'~content_type~'.tabs_menu.translations')|trans }}</a>
            {% else %}
                <a class="nav-link disabled">{{ ('admin_'~content_type~'.tabs_menu.translations')|trans }}</a>
            {% endif %}
        </li>
        <li class="nav-item">
            {% if not content_config.admin.version_list.is_granted or is_granted(content_config.admin.version_list.is_granted, entity) %}
                <a class="nav-link {{ current == 'versions' ? 'active' : '' }}" href="{{ url('sfs_cms_admin_content_'~content_type~'_versions', {'content':content_entity}) }}">{{ ('admin_'~content_type~'.tabs_menu.versions')|trans }}</a>
            {% else %}
                <a class="nav-link disabled">{{ ('admin_'~content_type~'.tabs_menu.versions')|trans }}</a>
            {% endif %}
        </li>
        <li class="nav-item">
            {% if not content_config.admin.update.is_granted or is_granted(content_config.admin.update.is_granted, entity) %}
