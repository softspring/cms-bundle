        </li>
        <li class="nav-item">
            {% if not content_config.admin.delete.is_granted or is_granted(content_config.admin.delete.is_granted, entity) %}
                <a class="nav-link {{ current == 'delete' ? 'active-danger' : '' }}" href="{{ url('sfs_cms_admin_content_'~content_type~'_delete', {'content':content_entity}) }}">{{ ('admin_'~content_type~'.tabs_menu.delete')|trans }}</a>
            {% else %}
                <a class="nav-link disabled">{{ ('admin_'~content_type~'.tabs_menu.delete')|trans }}</a>
            {% endif %}
        </li>
    {% endblock tabs %}
