{%- macro id (idValue) -%}
{% apply spaceless %}
    {% if idValue|default %}id="{{ idValue }}"{% endif %}
{% endapply %}
{%- endmacro -%}

{%- macro class (classesValues, defaultClasses = '') -%}
{% apply spaceless %}
    {% set classes = defaultClasses %}
    {% if classesValues is not iterable %}
        {% set classesValues = [classesValues] %}
    {% endif %}

    {% for classesValue in classesValues %}
        {% set classes = ((classes is empty ? '' : classes~' ') ~ classesValue)|trim %}
    {% endfor %}

    {% if classes|default %}class="{{ classes|trim }}"{% endif %}
{% endapply %}
{%- endmacro -%}

{%- macro bg_color(bg_color, additionalStyles='') -%}
{% apply spaceless %}
    {% if bg_color|default or additionalStyles|default %}style="{{ _self.bg_color_style(bg_color) }} {{ additionalStyles }}"{% endif %}
{% endapply %}
{%- endmacro -%}

{%- macro bg_color_style(bg_color) -%}
{% apply spaceless %}
    {{ bg_color|default ? 'background-color:'~bg_color : '' }}
{% endapply %}
{%- endmacro -%}
